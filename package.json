{
  "name": "bitcoin-regtest",
  "version": "1.0.0",
  "description": "Zero-config Bitcoin regtest environment with auto-mining. Perfect for local development and testing Bitcoin applications without running bitcoind manually.",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "type": "module",
  "bin": {
    "bitcoin-regtest": "./dist/cli.js"
  },
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      }
    }
  },
  "files": [
    "dist",
    "README.md",
    "PUBLISHING.md"
  ],
  "scripts": {
    "build": "tsdown",
    "start": "tsx src/cli.ts",
    "clean": "rm -rf dist",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write \"src/**/*.{ts,js,json}\"",
    "format:check": "prettier --check \"src/**/*.{ts,js,json}\"",
    "type-check": "tsc --noEmit",
    "prepublishOnly": "yarn build",
    "version:patch": "yarn version --patch --no-git-tag-version",
    "version:minor": "yarn version --minor --no-git-tag-version",
    "version:major": "yarn version --major --no-git-tag-version",
    "version:beta": "yarn version --prerelease --preid=beta --no-git-tag-version",
    "publish:beta": "yarn version:beta && yarn build && yarn publish --tag beta",
    "publish:official": "yarn build && yarn publish"
  },
  "keywords": [
    "bitcoin",
    "regtest",
    "testing",
    "bitcoin-core",
    "bitcoind",
    "local-development",
    "auto-mining",
    "blockchain",
    "cryptocurrency",
    "btc"
  ],
  "author": "",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Pessina/bitcoin-regtest.git"
  },
  "bugs": {
    "url": "https://github.com/Pessina/bitcoin-regtest/issues"
  },
  "homepage": "https://github.com/Pessina/bitcoin-regtest#readme",
  "dependencies": {
    "bitcoin-core": "^5.0.0"
  },
  "devDependencies": {
    "@types/node": "^24.9.1",
    "@typescript-eslint/eslint-plugin": "^8.46.2",
    "@typescript-eslint/parser": "^8.46.2",
    "eslint": "^9.38.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "prettier": "^3.6.2",
    "tsdown": "^0.15.9",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.46.2"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
