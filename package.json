{
  "name": "bitcoin-regtest-monorepo",
  "version": "1.0.0",
  "private": true,
  "description": "Bitcoin regtest environment with explorer UI",
  "type": "module",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "yarn workspace @bitcoin-regtest/server run build && yarn workspace @bitcoin-regtest/web run build",
    "build:watch": "yarn workspace @bitcoin-regtest/server run build:watch",
    "start": "yarn workspace @bitcoin-regtest/server run start",
    "clean": "rm -rf packages/*/dist packages/web/dist",
    "lint": "eslint packages/**/src/**/*.{ts,tsx}",
    "lint:fix": "eslint packages/**/src/**/*.{ts,tsx} --fix",
    "format": "prettier --write \"packages/**/*.{ts,tsx,js,json}\"",
    "format:check": "prettier --check \"packages/**/*.{ts,tsx,js,json}\"",
    "type-check": "yarn workspace @bitcoin-regtest/server run type-check && yarn workspace @bitcoin-regtest/web run type-check"
  },
  "keywords": [
    "bitcoin",
    "regtest",
    "testing",
    "bitcoin-core",
    "bitcoind",
    "local-development",
    "auto-mining",
    "blockchain",
    "cryptocurrency",
    "btc"
  ],
  "author": "",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Pessina/bitcoin-regtest.git"
  },
  "bugs": {
    "url": "https://github.com/Pessina/bitcoin-regtest/issues"
  },
  "homepage": "https://github.com/Pessina/bitcoin-regtest#readme",
  "dependencies": {
    "bitcoin-core": "^5.0.0"
  },
  "devDependencies": {
    "@types/node": "^24.9.1",
    "@typescript-eslint/eslint-plugin": "^8.46.2",
    "@typescript-eslint/parser": "^8.46.2",
    "eslint": "^9.38.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "prettier": "^3.6.2",
    "tsdown": "^0.15.9",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.46.2"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
