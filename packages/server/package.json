{
  "name": "@bitcoin-regtest/server",
  "version": "1.0.0",
  "description": "Zero-config Bitcoin regtest environment with auto-mining. Perfect for local development and testing Bitcoin applications without running bitcoind manually.",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "type": "module",
  "bin": {
    "bitcoin-regtest": "./dist/cli.js"
  },
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      }
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsdown",
    "build:watch": "tsdown --watch",
    "start": "tsx src/cli.ts",
    "type-check": "tsc --noEmit",
    "prepublishOnly": "npm run type-check && npm run build"
  },
  "keywords": [
    "bitcoin",
    "regtest",
    "blockchain",
    "bitcoin-core",
    "bitcoind",
    "bitcoin-rpc",
    "testing",
    "local-development",
    "auto-mining",
    "cryptocurrency",
    "btc",
    "blockchain-explorer",
    "bitcoin-development",
    "bitcoin-regtest",
    "regtest-explorer",
    "bitcoin-devtools",
    "integration-testing"
  ],
  "author": "Bitcoin Regtest Explorer Contributors",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Pessina/bitcoin-regtest.git",
    "directory": "packages/server"
  },
  "bugs": {
    "url": "https://github.com/Pessina/bitcoin-regtest/issues"
  },
  "homepage": "https://github.com/Pessina/bitcoin-regtest#readme",
  "engines": {
    "node": ">=22.0.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "bitcoin-core": "^5.0.0"
  },
  "devDependencies": {
    "tsdown": "^0.15.9",
    "tsx": "^4.20.6"
  }
}
