{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "target": "ES2022",
    "module": "ES2022",
    "lib": ["ES2022"],
    "types": ["node"],
    "outDir": "./dist",
    "declaration": true,
    "moduleResolution": "bundler",
    "resolvePackageJsonExports": true,
    "resolvePackageJsonImports": true
  },
  "include": ["src/**/*", "*.ts"],
  "exclude": ["node_modules", "dist", "examples"],
  "ts-node": {
    "esm": true,
    "files": true
  }
}
